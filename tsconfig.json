{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "target": "es6",
    "allowJs": true,
    // 修改配置
    "strict": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": false,
    "moduleResolution": "Node",
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
    // END
  },
  "files": [
    "src/index.ts"
  ],
  // 修改配置
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "*.test.ts"
  ]
  // END
}
